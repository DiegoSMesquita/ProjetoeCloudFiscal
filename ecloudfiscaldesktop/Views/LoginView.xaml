<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:eCloudFiscalDesktop.ViewModels"
        x:Class="eCloudFiscalDesktop.Views.LoginView"
        Title="Login" Width="400" Height="300">
  <Window.DataContext>
    <vm:LoginViewModel/>
  </Window.DataContext>
  <StackPanel Margin="20">
    <TextBlock Text="Email"/>
    <TextBox Text="{Binding Email,Mode=TwoWay}" Margin="0,5"/>
    <TextBlock Text="Senha" Margin="0,10,0,0"/>
    <TextBox PasswordChar="●" Text="{Binding Password, Mode=TwoWay}" Margin="0,5"/>
    <Button Content="Entrar" Command="{Binding LoginCommand}" Margin="0,15,0,0" HorizontalAlignment="Right"/>
  </StackPanel>
</Window>