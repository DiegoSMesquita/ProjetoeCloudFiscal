<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="https://github.com/avaloniaui"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:eCloudFiscalDesktop.ViewModels"
        x:Class="eCloudFiscalDesktop.Views.LoginView"
        Width="400" Height="300"
        Title="Login - eCloudFiscal"
        mc:Ignorable="d">
    <Window.DataContext>
        <vm:LoginViewModel />
    </Window.DataContext>

    <Grid RowDefinitions="Auto,Auto,Auto,Auto,Auto" Margin="20">
        <TextBlock Text="Email" />
        <TextBox Grid.Row="1" Text="{Binding Email, Mode=TwoWay}" Margin="0,5" />

        <TextBlock Grid.Row="2" Text="Senha" Margin="0,10,0,0" />
        <PasswordBox Grid.Row="3" Name="SenhaBox" PasswordChanged="OnPasswordChanged" Margin="0,5" />

        <Button Grid.Row="4" Content="Entrar"
                Command="{Binding LoginCommand}"
                HorizontalAlignment="Right" Margin="0,15,0,0" />
    </Grid>
</Window>