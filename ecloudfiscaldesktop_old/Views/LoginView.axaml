<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:eCloudFiscalDesktop.ViewModels"
        x:Class="eCloudFiscalDesktop.Views.LoginView"
        Title="Login - eCloudFiscal"
        Width="400" Height="350"
        WindowStartupLocation="CenterScreen">
  <Window.DataContext>
    <vm:LoginViewModel/>
  </Window.DataContext>

  <Grid RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto" Margin="20" VerticalAlignment="Center">
    <TextBlock Grid.Row="0" Text="Bem-vindo ao eCloudFiscal"
               FontSize="18"
               FontWeight="Bold"
               HorizontalAlignment="Center"
               Margin="0,0,0,15"/>

    <TextBlock Grid.Row="1" Text="Email"/>
    <TextBox Grid.Row="2"
             Text="{Binding Email, Mode=TwoWay}"
             Margin="0,5"
             Watermark="Digite seu email"/>

    <TextBlock Grid.Row="3" Text="Senha" Margin="0,10,0,0"/>
    <TextBox Grid.Row="4"
             Text="{Binding Password, Mode=TwoWay}"
             PasswordChar="●"
             Margin="0,5"
             Watermark="Digite sua senha"/>

    <StackPanel Grid.Row="5"
                Orientation="Horizontal"
                HorizontalAlignment="Right"
                Margin="0,15,0,0"
                Spacing="10">
      <Button Content="Entrar" Command="{Binding LoginCommand}"/>
      <Button Content="Esqueci minha senha" Command="{Binding ForgotPasswordCommand}"/>
    </StackPanel>
  </Grid>
</Window>