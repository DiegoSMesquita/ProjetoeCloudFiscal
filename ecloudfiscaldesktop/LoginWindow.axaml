<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="eCloudFiscalDesktop.LoginWindow"
        Title="Login - eCloudFiscal"
        Width="400" Height="420"
        WindowStartupLocation="CenterScreen">
  <Border Background="#23272F" CornerRadius="12" Padding="32" Margin="16">
    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Spacing="18">
      <TextBlock Text="Bem-vindo ao eCloudFiscal" FontSize="22" FontWeight="Bold" Foreground="#fff" HorizontalAlignment="Center"/>
      <TextBlock Text="E-mail" Foreground="#bbb"/>
      <TextBox Name="EmailBox" Watermark="Digite seu e-mail" MinWidth="220"/>
      <TextBlock Text="Senha" Foreground="#bbb"/>
      <TextBox Name="SenhaBox" Watermark="Digite sua senha" PasswordChar="â—" MinWidth="220"/>
      <Button Content="Entrar" Name="EntrarBtn" Height="38" Background="#0078D4" Foreground="#fff" FontWeight="Bold" Click="OnEntrarClick" Margin="0,10,0,0"/>
      <TextBlock Name="MsgErro" Foreground="#ff5555" FontWeight="Bold" FontSize="14" TextWrapping="Wrap" IsVisible="False"/>
    </StackPanel>
  </Border>
</Window>
